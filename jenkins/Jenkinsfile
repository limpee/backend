pipeline {
    agent any

    environment {
        SSH_KEY = credentials('backend-key.pem') // Substitua 'your-ssh-key-id' pelo ID real das suas credenciais SSH
        REMOTE_SERVER = 'ec2-3-214-52-91.compute-1.amazonaws.com'
        SSH_USER = 'ec2-user'
    }

    stages {
        stage('SSH and Git Commands') {
            steps {
                script {
                    
                    """
                        cd /home/ec2-user/keys
                        ssh -i \${SSH_KEY} \${SSH_USER}@\${REMOTE_SERVER}
                        cd /home/ec2-user/repo/backend
                        sudo git fetch
                        sudo git pull
                    """
                    
                }
            }
        }
    }
}
